//parameterized input(f=different way). Input block directly inside stage block and not under steps block


@Library("shared-library") _

pipeline {
        agent none
        
        stages {
            stage ("input") {
                agent any

                        input {
                                message "What is your first name?"
                                ok "Submit"
                                /*
                                This won't work with input block in declarative pipeline
                                parameters {
                                        string(defaultValue: "Prince", name: "FIRST_NAME", trim: true)
                                }
                                */

                    }
            }
            stage ("output") {
                steps {
                    echo "My first name is ${FIRST_NAME}"

                }
        
        }
    }
  }