// In a Declarative Jenkins Pipeline, the input {} block is allowed â€” but only for manual approval without parameters.


@Library("shared-library") _

pipeline {
        agent none
        
        stages {
            stage ("input") {
                agent any
                        steps{
                            input {
                                message 'Do you want to proceed?'
                                ok 'Yes'
                                /*
                                This won't work with input block in declarative pipeline
                                parameters {
                                        string(defaultValue: "Prince", name: "FIRST_NAME", trim: true)
                                }
                                */
                            }
                        }

            }
            stage ("output") {
                steps {
                    echo "My first name is ${FIRST_NAME}"

                }
        
        }
    }
  }