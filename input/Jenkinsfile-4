// In a Declarative Jenkins Pipeline, the input {} block is allowed â€” but only for manual approval without parameters.



pipeline {
    agent any

    stages {
        stage('Manual Approval') {
            steps {
                script {
                    input message: 'Do you want to proceed?', ok: 'Yes'
                }
            }
        }

        stage('Next Step') {
            steps {
                echo 'User approved. Continuing...'
            }
        }
    }
}
